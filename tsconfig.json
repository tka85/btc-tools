{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "dist",
        "rootDir": "./",
        "sourceMap": true,
        "lib": [
            "es6",
            "es2017"
        ]
    },
    "include": [
        "src/**/*",
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "compileOnSave": true
}